<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="GDUIDefaultThemeButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#c6c6c6</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="GDUIDefaultThemeEditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/gd_ui_shape_edittext_general</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/gd_grey</item>
    </style>

    <style name="GDUIDefaultThemeEditText2">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/gd_ui_shape_edittext_general</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/gd_grey</item>
    </style>

    <style name="GDUIRedEditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/gd_edit_text_gray_background</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColorHint">@color/gd_grey</item>
    </style>

    <style name="GDUIEditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:minEms">1</item>
        <item name="android:textColorHint">@color/gd_grey</item>
    </style>

    <style name="GDButton" parent="android:Widget.Button">
        <item name="android:layout_width">@dimen/gd_button_width</item>
        <item name="android:layout_height">@dimen/gd_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/gd_button_font_size</item>
    </style>

    <style name="GDLargeButton" parent="android:Widget.Button">
        <item name="android:layout_height">@dimen/gd_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/gd_button_font_size</item>
    </style>

    <style name="GDSplitBillingAlertButton" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/gd_split_billing_alert_button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:gravity">right|center</item>
    </style>
</resources>