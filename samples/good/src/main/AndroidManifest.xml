<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kidozen.samples.good" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
        <activity android:name="kidozen.client.authentication.GoodAuthenticationActivity" />
        <activity android:name=".MainActivity"
            android:alwaysRetainTaskState="true"
            android:label="@string/app_name" >
            <meta-data android:name="GDMonitorActivity" android:value="true" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyNewActivity" android:label="@string/title_activity_my_new" >
        </activity>
    </application>

</manifest>
